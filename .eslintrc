{
  "root": true,
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "linebreak-style": 0,
    "no-restricted-globals": "off", // used this for isNaN
    "no-eval": 0, // used this for values of dynamic keys from sitecore
    "no-new-func": 0, // used this for template key value evaluation from sitecore dynamic content 
    "max-len": "off",
    "no-alert": "off",
    "no-console": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "quote-props": [
      "error",
      "consistent-as-needed"
    ],
    "radix": 0,
    "react/jsx-closing-bracket-location": [
      "error",
      "after-props"
    ],
    "react/forbid-prop-types": 0,
    "react/jsx-max-props-per-line": "off",
    "react/jsx-props-no-spreading": "off",
    "react/no-danger": 0,
    "no-underscore-dangle": 0,
    "no-useless-escape": 0,
    "react/jsx-one-expression-per-line": [
      "error",
      {
        "allow": "literal"
      }
    ]
  }
}